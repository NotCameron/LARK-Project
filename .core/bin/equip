#!/bin/bash

. ../playerStats

item=$(cat /home/$USER/LARK-Project/game/inventory | grep -o $1)

if [ $# -gt 1 ] || [ $# == 0 ]; then
 echo "You can only equip one item at a time!"
elif [ $1 == $item ]; then
 if ls /home/$USER/LARK-Project/.core/modules/weapons | grep $1 > /dev/null; then
  weaponPath=/home/$USER/LARK-Project/.core/modules/weapons/$1
 elif ls /home/$USER/LARK-Project/.core/modules/armor/$1 | grep $1 > /dev/null; then
  armorPath=/home/$USER/LARK-Project/.core/modules/armor/$1
 else
  echo "The item is not a weapon or armor"
 fi
else
 echo "You do not have this item in your inventory!"
fi
